<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_light"
    android:fillViewport="true"
    tools:context=".ui.achievements.AchievementsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/header_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BaÅŸarÄ±mlar &amp; SÄ±ralama"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:background="@drawable/profile_header_gradient"
            android:textColor="@color/black"/>

        <!-- User Ranking Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/userRankingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/kazanion_dark"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/profile_gradient_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† SÄ±ralama"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <!-- User Rank Circle -->
                <TextView
                    android:id="@+id/textViewUserRank"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:text="#0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/white_circle_background" />

                <!-- User Points Badge -->
                <TextView
                    android:id="@+id/textViewUserPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0 puan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/kazanion_blue"
                    android:background="@drawable/points_badge_background"
                    android:padding="12dp" />

                <!-- User Name -->
                <TextView
                    android:id="@+id/textViewUserDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewUserRank"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="KullanÄ±cÄ±"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Leaderboard Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/leaderboardCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Tam SÄ±ralama"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/kazanion_blue"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewLeaderboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Achievements Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ BaÅŸarÄ±mlar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/kazanion_blue"
            android:padding="16dp"
            android:paddingBottom="8dp"/>

        <!-- Achievements List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>

</ScrollView> 