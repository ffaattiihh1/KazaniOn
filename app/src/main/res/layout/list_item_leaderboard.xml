<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp">

    <!-- Highlight View for Current User -->
    <View
        android:id="@+id/viewHighlight"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/kazanion_blue"
        android:visibility="gone" />

    <!-- Rank -->
    <TextView
        android:id="@+id/textViewRank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:text="#1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/circle_background" />

    <!-- Badge/Crown Icon -->
    <ImageView
        android:id="@+id/imageBadge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/textViewRank"
        android:layout_alignEnd="@id/textViewRank"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp"
        android:visibility="gone" />

    <!-- User Info Container -->
    <LinearLayout
        android:id="@+id/layoutUserInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textViewRank"
        android:layout_toStartOf="@id/textViewPoints"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Display Name -->
        <TextView
            android:id="@+id/textViewDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullan覺c覺 Ad覺"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Rank Text (for non-top3) -->
        <TextView
            android:id="@+id/textViewRankText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S覺ralama"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Points -->
    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="100 puan"
        android:textSize="14sp"
        android:textColor="@color/kazanion_blue"
        android:textStyle="bold"
        android:background="@drawable/points_badge_background"
        android:padding="8dp" />

</RelativeLayout> 