<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün Adı"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textProductDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün açıklaması"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500 Puan"
            android:textSize="16sp"
            android:textColor="@color/kazanion_blue"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textProductStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok: 50"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/buttonBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/kazanion_blue"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView> 