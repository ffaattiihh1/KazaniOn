<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konum Bazlı Anket Detayları"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewPollTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anket Başlığı"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewPollDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anket açıklaması burada yer alacak..."
        android:textColor="@color/secondary_dark"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesafe:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewPollDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5 km uzaklıkta"
            android:textColor="@color/kazanion_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adres:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewPollAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anket adresi"
            android:textColor="@color/secondary_dark"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kazanılacak Puan:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewPollPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Puan"
            android:textColor="@color/kazanion_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kapat"
        android:textColor="@color/white"
        android:backgroundTint="@color/kazanion_blue"
        app:cornerRadius="8dp"/>

</LinearLayout> 